@{
    ViewBag.Title = "Remoção de Vídeo";
    Layout = "_Layout";
}


<div class="termos-de-uso">
    <h1>Aviso de Conteúdo Sensível</h1>

    <form action="/remocao-video" method="post">
        <label for="nome">Nome Completo:</label>
        <input type="text" id="nome" name="nome" required>

        <label for="email">E-mail:</label>
        <input type="email" id="email" name="email" required>

        <label for="link-video">Link do Vídeo:</label>
        <input type="url" id="link-video" name="link-video" required>

        <label for="motivo">Motivo da Solicitação:</label>
        <textarea id="motivo" name="motivo" rows="5" required></textarea>

        <button type="submit">Solicitar Remoção</button>
    </form>
</div>